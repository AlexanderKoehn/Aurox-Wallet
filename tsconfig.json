{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "ES2018",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "useUnknownInCatchVariables": false,
    "lib": [
      "esnext",
      "dom"
    ],
    "paths": {
      "@app/*": [
        "./src/*"
      ]
    },
    "types": [
      "node",
      "chrome",
      "jest"
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    "static"
  ]
}